<%- include("partials/header.ejs") %>

<main>
  <div class="container d-flex align-items-center">
    <i class="bi bi-arrow-left-short" style="font-size: 1rem;"></i>
    <a class="btn btn-link text-decoration-none text-dark p-0"href="/"><p class="mt-3">Back</p></a>
  </div>
   

   <div class="container p-5">
      <div class="viewBlog-header">
        
        <h1 class="title text-left"><%= blogDetails?.title %></h1>
        <p class="text-body-tertiary" style="font-size:0.8rem"><%= blogDetails?.date %></p>
       
       
       <div class="d-flex">
        <button type="button" class="btn btn-outline-primary me-1" data-bs-toggle="modal" data-bs-target="#editModal">
            Edit
           </button>

        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
           Delete
          </button>
       </div>
     
       
      
          
      </div>
      <div class="overflow-div mt-5">
        <p><%= blogDetails?.description %></p>
      </div>
    </div>


  <!-- Modal -->
  <div class="modal fade mt-5" id="blogModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Post a Blog</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/home" method="post">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Blog Title</span>
                <input type="text" id="bTitle" name="blogTitle" class="form-control" placeholder="Blog Title Here" aria-label="Username" aria-describedby="basic-addon1">
              </div>

              <div class="form-floating">
                <textarea type="text" id="bDes"name="blogDes"
               class="form-control" placeholder="Write your Blog here..."  style="height: 100px"></textarea>
                
              </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Post</button>
          </div>
    </form>
        
      </div>
    </div>
  </div>


  <!--deleteModal-->
  <div class="modal fade mt-5" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Blog</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            
            <form action="/delete/<%=blogDetails.id%>" method="post">
           <div>
            <p>Are you sure you want to delete this blog?</p>
           </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-danger">Delete</button>
          </div>
    </form>
        
      </div>
    </div>
  </div>


 

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</main>

<%- include("partials/footer.ejs") %>